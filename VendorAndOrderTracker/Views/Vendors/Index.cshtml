@{
  Layout = "_Layout";
}

@using VendorAndOrderTracker.Models;
<h2>Vendors</h2>
<hr>
@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet.</h3>
  <h5><a href="/vendors/new">Add a new vendor</a></h5>
}

@foreach (Vendor vendor in Model)
{
  <h4><a href="/vendors/@vendor.Id">@vendor.Name</a></h4>
  <p>Description: @vendor.Description</p>
  <br>
}
@if (Model.Count >= 1)
{
<h5><a href="/vendors/new">Add another vendor</a></h5>
}