@{
  Layout = "_Layout";
}

@using VendorAndOrderTracker.Models;
<h2>Vendors</h2>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet.</h3>
  <h4><a href="/vendors/new">Add a new vendor</a></h4>
}

@foreach (Vendor vendor in Model)
{
  <h4><a href="/vendors/@vendor.Id">@vendor.Name</a></h4>
}

